        let myTemp = parseFloat(getElementById('myNum01').value)
        let mySum = '';
        let myArray = new Array(myTemp); 

        for (let myLoop = 1; myLoop <= myTemp; myLoop++) {

            mySum += myLoop + '<br>'
            
        }
        document.getElementById('myDiv01').innerHTML = mySum;
